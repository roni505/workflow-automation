generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String @id @default(uuid())
  name        String
  email       String @unique
  password    String
  Workflow    Workflow[]
  credentails Credentials[]
  webhook     Webhook[]
}

model Credentials {
  id          String @id @default(uuid())
  name        String
  platform    String
  data        Json
  user_Id     String
  user        User @relation(fields: [user_Id], references: [id])
}

model Workflow {
  id          String @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isActive    Boolean
  name        String
  isArchived  Boolean
  nodes       Json
  connections Json
  user_Id     String
  user        User @relation(fields: [user_Id], references: [id]) 
  webhook_Id  String?
  webhook     Webhook? @relation(fields: [webhook_Id], references: [id])
}

model Webhook {
  id          String @id @unique @default(uuid())
  URL         String @unique
  workflow    Workflow[]
  user_id     String
  user        User @relation(fields: [user_id], references: [id])
}
