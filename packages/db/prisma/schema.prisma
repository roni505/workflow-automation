generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PlatfromType {
  TELEGRAM
  RESEND
}

model User {
  id          String @id @default(uuid())
  name        String
  email       String @unique
  password    Int
  workflow    Workflow[]
  credentails Credentials[]
  webhook     Webhook[]
}


model Workflow {
  id          String @id @default(uuid())
  createAt    DateTime @default(now())
  updateAt    DateTime @updatedAt
  active      Boolean
  name        String
  isArchived  Boolean
  nodes       Json
  connections Json
  user_Id     String
  user        User @relation(fields: [user_Id], references: [id]) 
  // settings    IWorkflowSettings?
  // staticData  IDataObjects?
  // meta        WorkflowFEMeta?
}

model Credentials {
  id          String @id @default(uuid())
  name        String
  platfrom    PlatfromType
  data        Json
  user_Id     String
  user        User @relation(fields: [user_Id], references: [id])
}

model Webhook {
  id          String @id @default(uuid())
  name        String
  method      String
  path        String
  header      String
  secret      Int
  user_id     String
  user        User @relation(fields: [user_id], references: [id])
}
