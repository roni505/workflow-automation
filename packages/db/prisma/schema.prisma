generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PlatformType {
  TELEGRAM
  RESEND
}

model User {
  id          String @id @default(uuid())
  name        String
  email       String @unique
  password    String
  workflow    Workflow[]
  credentails Credentials[]
  webhook     Webhook[]
  outbox      Outbox_workflow[]
}


model Workflow {
  id          String @id @default(uuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  isActive      Boolean
  name        String
  isArchived  Boolean
  nodes       Json
  connections Json
  user_Id     String
  user        User @relation(fields: [user_Id], references: [id]) 
  // will update as the application grows
  // settings    IWorkflowSettings?
  // staticData  IDataObjects?
  // meta        WorkflowFEMeta?
}

model Outbox_workflow {
  id          String @id @default(uuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  isActive      Boolean
  name        String
  isArchived  Boolean
  nodes       Json
  connections Json
  user_Id     String
  user        User @relation(fields: [user_Id], references: [id]) 
  // will update as the application grows
  // settings    IWorkflowSettings?
  // staticData  IDataObjects?
  // meta        WorkflowFEMeta?
}

model Credentials {
  id          String @id @default(uuid())
  name        String
  platform    PlatformType
  data        Json
  user_Id     String
  user        User @relation(fields: [user_Id], references: [id])
}

model Webhook {
  id          String @id @default(uuid())
  name        String
  method      String
  path        String
  header      String
  secret      Int
  user_id     String
  user        User @relation(fields: [user_id], references: [id])
}
